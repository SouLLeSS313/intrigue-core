<h3>Task</h3>
<div class="row">
  <%= erb :'tasks/_task_runner' %>
<div id="metadata" class="col-sm-7"></div>
</div>
<br/>
<h4>Tasks</h4>
<ul>
<% @task_results.each do |x| %> <li><a href="/v1/task_results/<%=x.id%>"><%= x.task_name %> on <%= x.base_entity %> (<%=x.entity_count%>)</a></li><% end %>
</ul>
<%= @task_results.pager.to_html('/v1/task') %>

